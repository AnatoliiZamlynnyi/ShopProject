<Window x:Class="ShopProject.AddCategory"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ShopProject"
        mc:Ignorable="d"
        Title="Додати категорію" WindowStartupLocation="CenterScreen" Height="150" Width="520">
    <Grid Background="{StaticResource brushReg}">
        <StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
        <Label>Категорія:</Label>
            <TextBox Name="categoryName"></TextBox>
        </StackPanel>
            <DockPanel Margin="3" HorizontalAlignment="Center">
                <Button Name="addCateg" Width="190" Click="Click_AddCategoryButton" Background="Green">Зберегти</Button>
                <Button Name="cancelCateg" Width="190" Click="Click_CancelCButton" Background="Red">Відмінити</Button>
            </DockPanel>
            <Label Name="stanCat" Foreground="Red"></Label>
        </StackPanel>
    </Grid>
</Window>
